<div class="panel panel-default">
    <div class="panel-body">
        <h3>{{attribute}}</h3>
        <ul class="nav nav-tabs" role="tablist">
            {{#each locales as |locale|}}
                {{#tab-link-view locale=locale attribute=attribute currentLocale=currentLocale action='setActive' as |link|}}
                    <a href="#" role="tab">
                        <span class={{link.localeClass}}></span>
                    </a>
                {{/tab-link-view}}
            {{/each}}
        </ul>
        <div class="tab-content">
            {{#each locales as |locale|}}
                {{#tab-content-view locale=locale attributeName=attribute model=model isTextArea=isTextArea withEditor=withEditor currentLocale=currentLocale as |attribute|}}
                    {{#if isTextArea}}
                        {{wysihtml-field model=model name=attribute withEditor=withEditor}}
                    {{else}}
                        {{admin-input class="admin-attribute" model=model name=attribute}}
                    {{/if}}
                {{/tab-content-view}}
            {{/each}}
        </div>
    </div>
</div>
